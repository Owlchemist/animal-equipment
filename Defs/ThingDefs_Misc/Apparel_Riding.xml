<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Name="AnimalRidingBase" ParentName="ApparelMakeableBase" Abstract="True">
		<techLevel>Neolithic</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
			<researchPrerequisite>AnimalRidingGear</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<thingCategories>
			<li>Animal_Apparel</li>
		</thingCategories>
		<generateAllowChance>0</generateAllowChance>
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<defaultOutfitTags>
				<li>Anything</li>
				<li>Soldier</li>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_White" />
		<equippedStatOffsets>
			<MoveSpeed>0.1</MoveSpeed>
		</equippedStatOffsets>
	</ThingDef>
	
	<ThingDef ParentName="AnimalRidingBase">
		<defName>Apparel_Howdah</defName>
		<label>howdah</label>
		<description>A Howdah is designed to carry people on the back of an elephant or other large creature.</description>
		<descriptionHyperlinks>
			<ThingDef>Elephant</ThingDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Pawn/Animal/Apparel/Riding/howdah</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>55000</WorkToMake>
			<MaxHitPoints>250</MaxHitPoints>
			<Mass>12</Mass>
			<Flammability>0.7</Flammability>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>1</Insulation_Heat>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>16</EquipDelay>
		</statBases>
		<costList>
			<Steel>15</Steel>
			<Gold>1</Gold>
			<Cloth>80</Cloth>
			<WoodLog>30</WoodLog>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Animal/Apparel/Riding/howdah</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Animal</li>
				<li>Elephant</li>
			</tags>
		</apparel>
		<stuffProps>
			<allowColorGenerators>false</allowColorGenerators>
		</stuffProps>
	</ThingDef>
	
	<ThingDef ParentName="AnimalRidingBase">
		<defName>Apparel_bridle</defName>
		<label>bridle</label>
		<description>Provides protection and a harness for riding.</description>
		<descriptionHyperlinks>
			<ThingDef>Thrumbo</ThingDef>
			<ThingDef>Spelopede</ThingDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Pawn/Animal/Apparel/Riding/bridle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>15000</WorkToMake>
			<MaxHitPoints>110</MaxHitPoints>
			<Mass>0.5</Mass>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costList>
			<Steel>10</Steel>
		</costList>
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>Neck</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Animal/Apparel/Riding/bridle</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Animal</li>
				<li>Thrumbo</li>
				<li>Spelopede</li>
			</tags>
		</apparel>
	</ThingDef>
</Defs>